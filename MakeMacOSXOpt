#
#	GNU stuff
#
BISON =	bison
FLEX =	flex
AR =	ar
CC =   gcc
CXX =  g++

WFLAGS =	-Wall \
		-Winline \
		-Wno-non-virtual-dtor

OFLAGS =	-fno-common \
		-fno-exceptions \
		-fomit-frame-pointer \
		-fforce-addr \
		-fno-gnu-linker \
		-finline-limit=10000 \
		-O2 

DFLAGS =	-DMACOSX \
		-DLIBv3 \
		-DNO_ASSERT \
		-DSPEED_HACKS \
		-DTRUE=TRUE \
		-DFALSE=FALSE \
		-DLOCAL_INLINES \
		-I$(HOME)/local/include \
		-I/sw/include \
		-L/sw/lib \
		-L$(HOME)/local/lib \
		-g \
		$(OFLAGS) $(WFLAGS)

#		-DCOMPILER \
#		-DANNOTATE \

GMP_LIB_DIR =	/sw/lib

