#
#	Optimized version for Solaris.
#

#
#	Purify stuff
#
QUANTIFY =	quantify
PURECOV =	purecov
PURIFY =	purify
QUANTIFY_INCLUDE =	/csl/include
#
#	GNU stuff
#
BISON =	bison
FLEX =	flex
AR =	ar
CC =   gcc-3.2
CXX =  g++-3.2

WFLAGS =	-Wall \
		-Winline \
		-Wno-non-virtual-dtor

OFLAGS =	-fno-exceptions \
		-fomit-frame-pointer \
		-fforce-addr \
		-finline-limit=10000 \
		-O2 \
		-mcpu=v8 \
		-mtune=ultrasparc \
		-g

DFLAGS =	-DSOLARIS \
		-DLIBv3 \
		-DNO_ASSERT \
		-DSPEED_HACKS \
		-DLOCAL_INLINES \
		-I/homes/eker/include \
		-L/homes/eker/Solaris/3.2/lib \
		$(OFLAGS) $(WFLAGS)

#		-DCOMPILER \
#		-DANNOTATE \


GMP_LIB_DIR =	/homes/eker/Solaris/3.2/lib

LINKAGE =

ARFLAGS =	rus

DLMALLOC=	-ldlmalloc
